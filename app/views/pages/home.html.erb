<div class="container text-center" data-controller="check-balance">
  <form class="row g-2 justify-content-center py-5"
  data-action="submit->check-balance#check">
    <div class="col-4">
      <input type="text"
    class="form-control"
    placeholder="Type address"
    data-check-balance-target="input">
    </div>
    <div class="col-1">
      <input type="submit" class="btn btn-primary">
    </div>
  </form>
  <div class="row">
        <ul id="results"
    class="list-group"
    data-check-balance-target="results"></ul>
  </div>
</div>
